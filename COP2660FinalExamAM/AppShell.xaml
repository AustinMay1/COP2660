<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="COP2660FinalExamAM.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:COP2660FinalExamAM"
    xmlns:view="clr-namespace:COP2660FinalExamAM.View"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate view:MainPage}"
        Route="MainPage"
        Icon="home"
        />

        <ShellContent 
            Title="Data Entry"
            ContentTemplate="{DataTemplate view:DataEntryPage}"
            Route="DataEntryPage"
            Icon="data_folders"
            />
    </TabBar>
</Shell>
